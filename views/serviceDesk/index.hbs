<main>
    <h1>Добро пожаловать в сервис регистрации заявок</h1>

    <div class="table-part">
        {{#if isTaskPresent}}
        <table border="2">
            <tr class="table-head">
                <th id="first-column">
                    <p><strong>Краткое описание задачи</strong></p>
                </th>
                <th>
                    <p><strong>Время подачи заявки</strong></p>
                </th>
                <th>
                    <p><strong>Исполнитель</strong></p>
                </th>
                <th>
                    <p><strong>Зарегистрирована</strong></p>
                </th>
                <th>
                    <p><strong>Статус</strong></p>
                </th>
            </tr>
            {{#each tasks}}
                <tr>
                    <td id="left-align">{{ this.description }}</td>
                    <td>{{ this.createdAt }}</td>
                    <td>{{ this.problemSolverName }}</td>
                    <td>{{ this.acceptedAt }}</td>
                    <td>{{ this.status }}</td>
                </tr>
            {{/each}}
        </table>
        {{/if}}
    </div>

    <div class="button">
        <form action="/service-catalog" method="get">
            <button type="submit">Выбор категории</button>
        </form>
    </div>
</main>